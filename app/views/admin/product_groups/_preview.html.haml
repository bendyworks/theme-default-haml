- if @product_group.valid?
  - pg_products = @product_group.products.all
  %h2
    = ProductGroup.human_attribute_name(:products)
    (#{pg_products.length})
  #product-preview-products
    %table
      %thead
        %tr
          %th= Product.human_attribute_name(:name)
          %th= t(:action)
      %tbody
        - pg_products.each do |product|
          %tr
            %td= link_to product.name, product_url(product)
            %td= link_to t(:edit), edit_admin_product_path(product)