%h4= t("new_image")
- form_for(:image, :url => { :controller => 'images', :action => 'create' }, :html => { :multipart => true }) do |form|
  %table.basic-table= render :partial => "form", :locals => { :f => form }
  %p.form-buttons
    = button t("update")
    = t('or')
    = link_to t("cancel"), "#", :id => "cancel_link"
:javascript
  jQuery('#cancel_link').click(function (event) {
    jQuery('#new_image_link').show();
    jQuery('#images').html('');
  });