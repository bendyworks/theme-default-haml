.toolbar.order-links= button_link_to t("edit"), edit_admin_order_checkout_url(@order.number), :icon => 'edit'
= render :partial => 'admin/shared/order_tabs', :locals => {:current => "Customer Details"}
%h2= t("customer_details")
%p
  %label Email:
  = @checkout.email
%h3= Address.human_name(:count => 2)
%table.index
  %tr
    %th{:colspan => "8"}= t("billing_address")
  %tr
    %td
      %label #{Address.human_attribute_name(:first_name)}:
    %td{:colspan => "3"}= @checkout.bill_address.firstname
    %td
      %label #{Address.human_attribute_name(:last_name)}:
    %td{:colspan => "3"}= @checkout.bill_address.lastname
  %tr
    %td
      %label #{Address.human_attribute_name(:address1)}:
    %td{:colspan => "3"}= @checkout.bill_address.address1
    %td
      %label #{Address.human_attribute_name(:address2)}:
    %td{:colspan => "3"}= @checkout.bill_address.address2
  %tr
    %td
      %label #{Address.human_attribute_name(:city)}:
    %td= @checkout.bill_address.city
    %td
      %label #{Address.human_attribute_name(:zipcode)}:
    %td= @checkout.bill_address.zipcode
    %td
      %label #{Address.human_attribute_name(:state)}:
    %td= @checkout.bill_address.state.nil? ? @checkout.bill_address.state_name : @checkout.bill_address.state.name
    %td
      %label #{Address.human_attribute_name(:country)}:
    %td= @checkout.bill_address.country
  %tr
    %td
      %label #{Address.human_attribute_name(:phone)}:
    %td{:colspan => "7"}= @checkout.bill_address.phone
%table.index
  %tr
    %th{:colspan => "8"}= t("shipping_address")
  %tr
    %td
      %label #{Address.human_attribute_name(:first_name)}:
    %td{:colspan => "3"}= @checkout.ship_address.firstname
    %td
      %label #{Address.human_attribute_name(:last_name)}:
    %td{:colspan => "3"}= @checkout.ship_address.lastname
  %tr
    %td
      %label #{Address.human_attribute_name(:address1)}:
    %td{:colspan => "3"}= @checkout.ship_address.address1
    %td
      %label #{Address.human_attribute_name(:address2)}:
    %td{:colspan => "3"}= @checkout.ship_address.address2
  %tr
    %td
      %label #{Address.human_attribute_name(:city)}:
    %td= @checkout.ship_address.city
    %td
      %label #{Address.human_attribute_name(:zipcode)}:
    %td= @checkout.ship_address.zipcode
    %td
      %label #{Address.human_attribute_name(:state)}:
    %td= @checkout.ship_address.state.nil? ? @checkout.ship_address.state_name : @checkout.ship_address.state.name
    %td
      %label #{Address.human_attribute_name(:country)}:
    %td= @checkout.ship_address.country
  %tr
    %td
      %label #{Address.human_attribute_name(:phone)}:
    %td{:colspan => "7"}= @checkout.ship_address.phone