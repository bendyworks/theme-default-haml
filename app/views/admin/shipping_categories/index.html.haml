.toolbar
  %ul.actions
    %li= button_link_to t("new_shipping_category"), new_object_url, :icon => 'add'
  %br.clear/
%h1= t("shipping_categories")
%table.index
  %thead
    %th= t("name")
    %th= t("action")
  %tbody
    - @shipping_categories.each do |shipping_category|
      %tr{:id => dom_id(shipping_category)}
        %td{:width => "350px"}= shipping_category.name
        %td
          = link_to_edit shipping_category
          \&nbsp;
          = link_to_delete shipping_category