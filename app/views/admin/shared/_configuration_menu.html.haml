- content_for :sidebar do
  %h3.name= t("configurations")
  %br.clear/
  %ul.sidebar
    - cname = controller.controller_name
    - hook :admin_configurations_sidebar_menu do
      %li{:class => (cname == 'general_setting' ? 'active' : '')}
        = link_to t("general_settings"), admin_general_settings_path
      %li{:class => (cname == 'mail_settings' ? 'active' : '')}
        = link_to t("mail_server_settings"), admin_mail_settings_path
      %li{:class => (cname == 'tax_categories' ? 'active' : '')}
        = link_to t("tax_categories"), admin_tax_categories_path
      %li{:class => (cname == 'zones' ? 'active' : '')}
        = link_to t("zones"), admin_zones_path
      %li{:class => (cname == 'states' ? 'active' : '')}
        = link_to t("states"), admin_country_states_path(Spree::Config[:default_country_id])
      %li{:class => (cname == 'gateways' ? 'active' : '')}
        = link_to t("gateway"), admin_gateways_path
      %li{:class => (cname == 'billing_integrations' ? 'active' : '')}
        = link_to t("billing_integration"), admin_billing_integrations_path
      %li{:class => (cname == 'taxonomies' ? 'active' : '')}
        = link_to t("taxonomies"), admin_taxonomies_path
      %li{:class => (cname == 'inventory_settings' ? 'active' : '')}
        = link_to t("inventory_settings"), admin_inventory_settings_path
      %li{:class => (cname == 'trackers' ? 'active' : '')}
        = link_to t("analytics_trackers"), admin_trackers_path
    %li{:class => (cname == 'configurations' ? 'active' : '')}
      = link_to t("complete_list"), admin_configurations_path