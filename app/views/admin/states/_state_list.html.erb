<table class="index">
  <thead>
    <tr>
      <th><%= t("name") %></th>
      <th><%= t("abbreviation") %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @states.each do |state| %>
      <tr>
        <td><%=state.name %></td>
        <td><%=state.abbr %></td>
        <td class="actions">
          <%=link_to_with_icon 'edit', t("edit"), edit_admin_country_state_url(@country, state) %> &nbsp;
          <%=link_to_with_icon 'delete', t("delete"), object_url(state), :method => :delete %>
        </td>
      </tr>
    <% end %>
    <% if @states.empty? %>
      <tr><td colspan="3">None.</td></tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= button_link_to t("new_state"), new_admin_country_state_url(@country), :icon => 'add' %>
</p>
