= render :partial => 'admin/shared/configuration_menu'
%h1= t("states")
%p
  %label{:for => "country"}= t('country')
  %select#country
    = options_from_collection_for_select(@countries, :id, :name, @country.id)
= observe_field :country,                                                        |
  :update => 'state-list',                                                       |
  :url => admin_states_path,                                                     |
  :before => "jQuery('#state-list').hide(); jQuery('#busy_indicator').show()",   |
  :complete => "jQuery('#busy_indicator').hide(); jQuery('#state-list').show()", |
  :method => :get,                                                               |
  :with => "'country_id='+encodeURIComponent(value)",                            |
  :update => 'state-list'                                                        |
= image_tag "spinner.gif", :plugin=>"spree", :style => "display:none", :id => 'busy_indicator'
#state-list
  = render :partial => 'state_list'
