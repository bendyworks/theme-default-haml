<h4><%= t("add_option_types") %></h4>
<table class="index">
  <tr>
    <th><%= t("name") %></th>
    <th><%= t("presentation") %></th>
    <th></th>
  </tr>
  <% @available_option_types.each do |ot| %>
  <tr>
    <td><%=ot.name %></td>
    <td><%=ot.presentation %></td>
    <td class="actions"><%= link_to_remote icon('add') + ' ' + t("select"),
                           {:url => {:controller => "admin/option_types/",
                                    :id => ot,
                                    :product_id => @product.permalink, 
                                    :action => "select", 
                                    :option_type_id =>  ot},
                           :method => :get,	                           
                           :update => 'selected-options'}, :class => 'iconlink' %>					
    </td>
  </tr>
  <% end %>
  <% if @available_option_types.empty? %>
  <tr>
    <td colspan="3"><%= t('none_available') %></td>
  </tr>
  <% end %>		
</table>