%h4= t("add_option_types")
%table.index
  %tr
    %th= t("name")
    %th= t("presentation")
    %th
  - @available_option_types.each do |ot|
    %tr
      %td= ot.name
      %td= ot.presentation
      %td.actions
        - link_text = icon('add') + ' ' + t("select")
        - link_opts_url = {:controller => "admin/option_types/", :id => ot, :product_id => @product.permalink, :action => "select", :option_type_id =>  ot}
        - link_opts = {:url => link_opts_url, :method => :get, :update => 'selected-options'}
        = link_to_remote link_text, link_opts, :class => 'iconlink'
  - if @available_option_types.empty?
    %tr
      %td{:colspan => "3"}= t('none_available')